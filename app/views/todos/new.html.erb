<h1> Create a new TODO </h1>

<% if @todo.errors.any? %>
	<h2>the following errors prevented the todo from being saved</h2>
	<ul>
	<% @todo.errors.full_messages.each do |msg| %>
	  <li><%= msg %></li>
    <% end %>
    </ul>
<% end %>
<%= form_for @todo do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
   </p>

  <P>
	 <%= f.label :description %><br>
	 <%= f.text_area :description %>
  </P>
    <p>
	 <%= f.submit %>
	 </p>

<% end %>